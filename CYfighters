    int cible,r;
    while(eq1.pv >0 && eq2.pv>0);
    if(vitesse_equipe(eq1) > vitesse_equipe(eq2)){
        personnage premier = vitesse_equipe_membre(eq1);
        printf("au tour de l'equipe %c"eq1.nom);
        printf("que voulez vous faire?");
        printf("1:attaquer");
