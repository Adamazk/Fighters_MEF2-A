typedef struct{
    char nom;
    char description;
    int tours_actif;
    int nb_recharge;
}technique_spe;


typedef struct{
    char nom;
    int pv;
    int pvmax;
    int att;
    int def;
    int agi;
    int vit;
    technique_spe spe1;
    technique_spe spe2;
    technique_spe spe3;
}personnage;

typedef struct{
    char nom;
    personnage membre1;
    personnage membre2;
    personnage membre3;
    int pv = membre1.pv + membre2.pv + membre3.pv;
}equipe;



void tech1(personnage p1){
    p1.def += p1.def*50/100;

}

void tech2(personnage p1){
    p1.agi += p1.agi*25/100;
}

int vitesse_equipe(equipe eq){
    res = eq.membre1.vit;
    if(eq.membre2.vit > res){
        res = eq.membre2.vit;
    }
    if(eq.membre3.vit > res){
        res = eq.membre3.vit;
    }
    return res;
    
}


personnage vitesse_equipe_membre(equipe eq){
    res = eq.membre1;
    if(eq.membre2.vit > res.mem){
        res = eq.membre2;
    }
    if(eq.membre3.vit > res){
        res = eq.membre3;
    }
    return res;
    
}


void attaque(personnage perso1,personnage perso2){
    perso1.pv - ((perso2.att/perso1.def)+10);
}

