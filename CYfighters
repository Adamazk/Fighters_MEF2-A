        printf("2:"premier.spe1.description);
        printf(\n);
        printf("3:"premier.spe2.nom);
        printf(\n);
        printf("3:"premier.spe2.description);
        printf(\n);
        printf("4:"premier.spe3.nom);
        printf(\n);
        printf("4:"premier.spe3.description);
        scanf("/d",&c);
        if(c == 1){
            printf("quelle cible?");
            printf("1:%c"eq2.membre1.nom);
            printf("2:%c"eq2.membre2.nom);
            printf("3:%c"eq2.membre3.nom);
            scanf("%d",&cible);
            attaque(premier,cible);
        }
        else if(c==2){
            printf("quelle cible?");
            printf("1:%c"eq2.membre1.nom);
            printf("2:%c"eq2.membre2.nom);
